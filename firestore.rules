
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow read/write access to the 'users' collection for any authenticated user.
    // This is a simple rule for demonstration. For a production app, you'd likely
    // want to restrict this further (e.g., only a user can edit their own data).
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}
