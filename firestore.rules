
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write to the entire users collection.
    // This removes all authentication requirements for this app.
    match /users/{userId} {
      allow read, write: if true;
    }

    // Default to deny all access for any other collections.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
